<Window x:Class="lab1._3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1._3"
        mc:Ignorable="d"
        Title="MainWindow" Height="247.365" Width="606.175" Visibility="Visible" WindowStyle="None" AllowsTransparency="True">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF3FF9EF" Offset="0"/>
            <GradientStop Color="White" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.OpacityMask>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="Red" Offset="1"/>
        </LinearGradientBrush>
    </Window.OpacityMask>
    <Window.Clip>
        <RectangleGeometry Rect="0,0,606.175,247.365" RadiusX="25" RadiusY="25"/>
    </Window.Clip>
    <Grid>
        <TextBlock x:Name="LocationText" Text="Район, Новосибирск" FontWeight="Bold" FontSize="22" Margin="28,26,145.2,99.2"/>
        <TextBlock x:Name="TimeText" Text="Сейчас 13:37. Вчера в это время -25" FontSize="22" Margin="28,44,27.2,81.2"/>
        <TextBlock x:Name="TemperatureText" Text="-16" FontWeight="Bold" FontSize="50" Margin="28,89,404.4,81.2"/>
        <TextBlock x:Name="WindText" Text="1,0 м/с, Ю" FontSize="20" Margin="106,186,404.4,32.2"/>
        <TextBlock x:Name="HumidityText" Text="95%" FontSize="20" Margin="273,186,254.4,23.2"/>
        <TextBlock x:Name="PressureText" Text="766 мм рт. ст." FontSize="20" Margin="446,186,27.4,23.2"/>
        <Image Source="/image/sun.png" Stretch="Uniform" Margin="116,89,390.4,88.2"/>
        <Image Source="/image/blood-pressure.png" Margin="391,177,186.4,32.2" />
        <Image Source="/image/pour-rain.png" Margin="217,177,356.4,32.2" />
        <Image Source="/image/wind.png" Margin="46,177,519.4,32.2" />

        <Button x:Name="SettingsButton" Content="Настройки" FontSize="16" Width="95" Height="30" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,12,57.4,0"
                Background="Transparent" BorderThickness="0" Click="SettingsButton_Click"/>
        
        <Button x:Name="CloseButton" Content="×" FontSize="20" Width="30" Height="30" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,27.4,0"
                Background="Transparent" BorderThickness="0" Foreground="Black" Click="CloseButton_Click"/>
    </Grid>
</Window>
