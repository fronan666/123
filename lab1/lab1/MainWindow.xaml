<Window x:Class="lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="296">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock x:Name="DisplayTextBox" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Text=""/>
        <Button Grid.Row="1" Grid.Column="0" Background="Gray" Content="7" FontSize="30" Click="NumberButton_Click"></Button>
        <Button Grid.Row="1" Grid.Column="1" Background="Gray" Content="8" FontSize="30" Click="NumberButton_Click"></Button>
        <Button Grid.Row="1" Grid.Column="2" Background="Gray" Content="9" FontSize="30" Click="NumberButton_Click"></Button>
        <Button Grid.Row="1" Grid.Column="3" Background="Gray" Content="/" FontSize="30" Click="OperatorButton_Click"></Button>
        <Button Grid.Row="2" Grid.Column="0" Background="Gray" Content="4" FontSize="30" Click="NumberButton_Click"></Button>
        <Button Grid.Row="2" Grid.Column="1" Background="Gray" Content="5" FontSize="30" Click="NumberButton_Click"></Button>
        <Button Grid.Row="2" Grid.Column="2" Background="Gray" Content="6" FontSize="30" Click="NumberButton_Click"></Button>
        <Button Grid.Row="2" Grid.Column="3" Background="Gray" Content="*" FontSize="30" Click="OperatorButton_Click"></Button>
        <Button Grid.Row="3" Grid.Column="0" Background="Gray" Content="1" FontSize="30" Click="NumberButton_Click"></Button>
        <Button Grid.Row="3" Grid.Column="1" Background="Gray" Content="2" FontSize="30" Click="NumberButton_Click"></Button>
        <Button Grid.Row="3" Grid.Column="2" Background="Gray" Content="3" FontSize="30" Click="NumberButton_Click"></Button>
        <Button Grid.Row="3" Grid.Column="3" Background="Gray" Content="-" FontSize="30" Click="OperatorButton_Click"></Button>
        <Button Grid.Row="4" Grid.Column="0" Background="Gray" Content="0" FontSize="30" Click="NumberButton_Click"></Button>
        <Button Grid.Row="4" Grid.Column="1" Background="Gray" Content="C" FontSize="30" Click="ClearButton_Click"></Button>
        <Button Grid.Row="4" Grid.Column="2" Background="Gray" Content="=" FontSize="30" Click="EqualsButton_Click"></Button>
        <Button Grid.Row="4" Grid.Column="3" Background="Gray" Content="+" FontSize="30" Click="OperatorButton_Click"></Button>
    </Grid>
</Window>
