<Window x:Class="lr6_mp3player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MP3 Player" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnSelectFiles" Content="Select Files" Click="BtnSelectFiles_Click" Margin="0,0,5,0"/>
            <Button x:Name="btnPlay" Content="Play" Click="BtnPlay_Click" Margin="5,0,5,0" Width="40"/>
            <Button x:Name="btnPause" Content="Pause" Click="BtnPause_Click" Margin="5,0,5,0" Width="40"/>
            <Button x:Name="btnStop" Content="Stop" Click="BtnStop_Click" Margin="5,0,5,0" Width="40"/>
            <Button x:Name="btnNext" Content="Next" Click="BtnNext_Click" Margin="5,0,5,0" Width="40"/>
        </StackPanel>
        <ListBox x:Name="lstPlaylist" Grid.Row="1" Margin="0,0,0,10"/>
        <TextBlock x:Name="txtCurrentTrack" Grid.Row="2" Margin="0,5"/>
        <Slider x:Name="sldProgress" Grid.Row="3" Margin="0,5"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <TextBlock x:Name="txtTime" Text="00:00 / 00:00" VerticalAlignment="Center"/>
            <TextBlock Text="   Volume: " VerticalAlignment="Center" Margin="20,0,0,0"/>
            <Slider x:Name="sldVolume" Minimum="0" Maximum="1" Value="0.5" Width="80" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>